          img(style='display: block;' src='https://storage.googleapis.com/gm_static_files/gminfoleads_img/emails/first_contact/gray-border.jpg' alt='Borde gris' width='600')
  table(style='background-color: #ffffff;' width='600' cellspacing='0' cellpadding='0' border='0' align='center')
    tbody
      tr
        td(style='padding: 10px 0px 10px 0px;' align='center')
