  table(style='background-color: #FFFFFF;' role='presentation' width='600' cellspacing='0' cellpadding='0' align='center')
    tbody
      tr
        td(style='padding: 0px 0px 5px 0px; margin: 0px;' align='center')
          table(role='presentation' width='540' cellspacing='0' cellpadding='0' border='0' align='center' style='margin-top: 0px;')
            tbody
              tr
                td(align='center' width='auto' style='padding-left: 2px; padding-right: 2px;')
