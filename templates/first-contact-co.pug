extends partials/layout.pug

block content
  - var yours = lead.model.family.toUpperCase().indexOf('CAPTIVA') > 0 ? 'tuya' : 'tuyo'
  - var thisModel = lead.model.family.toUpperCase().indexOf('CAPTIVA') > 0 ? 'esta' : 'este'
  - var wamessage = encodeURI('Necesito más información sobre ' + lead.model.family + ' y planes de financiamiento')
  
  table(style='background-color: #ffffff;' width='600' cellspacing='0' cellpadding='0' border='0' align='center')
    tbody
      tr
        td(style='padding: 10px 0px 15px 0px;' align='center')
          table(style='background-color: #ffffff;' width='auto' cellspacing='0' cellpadding='0' border='0' align='center')
            tbody
              tr
                td(style='padding: 0px 0px 0px 20px;' width='131' align='right')
                  img(style='display: block;' src='https://storage.googleapis.com/gm_static_files/gminfoleads_img/emails/first_contact/logo-chevrolet.jpg' alt='Logo Chevrolet' width='131')
                td(style='padding: 0px 0px 0px 20px;' align='left')
                  img(style='display: block;' src=encodeURI(lead.dealerDealership.image) alt='Logo Dealer' width='auto')
  table(style='background-color: #ffffff;' width='600' cellspacing='0' cellpadding='0' border='0' align='center')
    tbody
      tr
        td(width='600')
          a(href=`${host}/funnels_public/save_click?header=${crypted}` target='_blank')
            img(style='display: block;' src=encodeURI(lead.model.image) alt='Gracias por registrarte' width='600')
  table(align='center' width='600' border='0' cellspacing='0' cellpadding='0')
    tbody
      tr
        td(align='center' bgcolor='#000000' style="background-image: url('https://storage.googleapis.com/gm_static_files/gminfoleads_img/emails/first_contact/bottom-bar.jpg');\
        background-repeat: no-repeat;\
        background-size: cover; \
        background-position:center;\
        background-color:#FFFFFF")
          //if gte mso 9
            v:rect(xmlns:v='urn:schemas-microsoft-com:vml' fill='true' stroke='false' style='mso-width-percent:615;')
              v:fill(type='frame' src='https://storage.googleapis.com/gm_static_files/gminfoleads_img/emails/first_contact/bottom-bar.jpg' color='#000000')
                v:textbox(style='mso-fit-shape-to-text:true' inset='0,0,0,0')
          div
            table(width='auto' style='height: 68px;' align='center' cellspacing='0' cellpadding='0' border='0')
              tbody
                tr
                  td(align='center' style='padding: 0px 0px 0px 0px;')
                    p(style='font-family:Arial, sans-serif;color:#383938;font-size:20px;font-weight:normal;line-height: 1.3em;font-style: normal;margin:0px; padding:0px;')
                      b #{name}
                      |  &iexcl;entremos en contacto ya!
          //if gte mso 9
  table(style='background-color: #ffffff;' width='600' cellspacing='0' cellpadding='0' border='0' align='center')
    tbody
      tr
        td(width='600')
          img(style='display: block;' src='https://storage.googleapis.com/gm_static_files/gminfoleads_img/emails/first_contact/bottom-border.jpg' alt='Borde inferior' width='600')
  table(style='background-color: #ffffff;' width='600' cellspacing='0' cellpadding='0' border='0' align='center')
    tbody
      tr
        td(width='600')
          a(href=`${host}/funnels_public/save_click?model=${crypted}`  target='_blank')
